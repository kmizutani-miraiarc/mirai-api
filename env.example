# Mirai API 環境変数設定例
# このファイルをコピーして .env として使用してください

# HubSpot API設定
HUBSPOT_API_KEY=your-hubspot-api-key-here
HUBSPOT_ID=your-hubspot-id-here

# Gemini AI API設定
GEMINI_API_KEY=your-gemini-api-key-here

# MySQLデータベース設定
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=mirai_base
MYSQL_CHARSET=utf8mb4

# サーバー設定
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Slack Webhook設定
SLACK_WEBHOOK_MIZUTANI=
SLACK_WEBHOOK_KUZE=
SLACK_WEBHOOK_IWASAKI=
SLACK_WEBHOOK_AKASE=
SLACK_WEBHOOK_FUJIMORI=
SLACK_WEBHOOK_YSUZUKI=
SLACK_WEBHOOK_FUJIMURA=
SLACK_WEBHOOK_MA_IMMEDIO=

# SMTP設定（メール送信用）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com